---
interface Props {
	title?: string;
	page?: string;
}

const { title, page } = Astro.props;
---

	<div class="book-page media-hide">
		<div class="title">{title}</div>
		<div class="body"><slot/></div>
		<div class="page">{page}</div>
	</div>

<style is:global>
	.double-page {
		display: flex;
		margin: auto;
		height: fit-content;
		box-shadow: 10px 20px 30px rgba(0, 0, 0, 0.25);
	}

	.book-page {
		display: flex;
		flex-direction: column;
		position: relative;
		aspect-ratio: 209 / 268;
		height: 87dvh;
		background: #fff;
		padding: 8.43dvh 8.11dvh 8.87dvh 9.73dvh;
		box-sizing: border-box;
		font-family: 'Book Antiqua';
	}

	.title {
		font-size: 2.16dvh;
		font-weight: 700;
		text-align: center;
		margin-bottom:  3.89dvh;
	}

	.title:empty {
		margin: 0;
	}

	.body {
		font-size: 1.64dvh;
		text-align: justify;
	}

	.body > p {
		text-indent: 3.24dvh;
	}

	.body > .no-indent {
		text-indent: 0;
	}

	.page {
		font-family: 'Calibri';
		font-size: 1.62dvh;
		font-weight: 700;
		opacity: 70%;
		position: absolute;
		right: 50%;
		bottom: 6dvh;
	}

	.quote {
		margin-block: 1.188rem;
	}

	.hide {
		display: none;
	}

	@media (max-width: 1615px) {
		.media-hide {
			display: none; 
		}
	}

	@media (max-width: 715px) {
		.book-page {
			height: 80dvh;
		}

		.title {
			font-size: 1.86dvh;
		}

		.body {
			font-size: 1.44dvh;
		}
		
		.page {
			font-size: 1.42dvh;
		}
	}

	@media (max-width: 500px) {
		.book-page {
			height: 70dvh;
			padding: 6.783dvh 6.525dvh 7.137dvh 7.829dvh;
		}

		.title {
			font-size: 1.623dvh;
			margin-bottom:  3.130dvh;
		}

		.body {
			font-size: 1.319dvh;
		}
		
		.page {
			font-size: 1.303dvh;
			bottom: 4.82dvh;
		}
	}
</style>